# SSH Client Configuration for Remote Access
# Global settings
Host *
    ServerAliveInterval 60
    ServerAliveCountMax 3
    PreferredAuthentications publickey
    IdentitiesOnly yes
    AddKeysToAgent yes
    UseKeychain yes

# Local MacBook connection (for testing)
Host localhost
    HostName localhost
    Port 2222
    User $(whoami)
    IdentityFile ~/.ssh/id_ed25519
    CertificateFile ~/.ssh/id_ed25519-cert.pub
    StrictHostKeyChecking no

# MacBook local network connection
Host macbook
    HostName 10.0.0.5
    Port 2222
    User $(whoami)
    IdentityFile ~/.ssh/id_ed25519
    CertificateFile ~/.ssh/id_ed25519-cert.pub
    StrictHostKeyChecking no

# Alternative IP for MacBook
Host macbook-alt
    HostName 10.0.0.6
    Port 2222
    User $(whoami)
    IdentityFile ~/.ssh/id_ed25519
    CertificateFile ~/.ssh/id_ed25519-cert.pub
    StrictHostKeyChecking no

# Mosh-specific settings
Host macbook-mosh
    HostName 10.0.0.5
    Port 2222
    User $(whoami)
    IdentityFile ~/.ssh/id_ed25519
    CertificateFile ~/.ssh/id_ed25519-cert.pub
    RemoteCommand "zellij attach main || zellij --session main"
    RequestTTY yes