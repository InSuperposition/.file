{
  "version": "1.0",
  "profiles": [
    {
      "name": "MacBook Main",
      "description": "Primary connection to MacBook with Zellij main session",
      "hostname": "10.0.0.5",
      "port": 2222,
      "username": "$(whoami)",
      "authentication": "certificate",
      "identityFile": "~/.ssh/id_ed25519",
      "certificateFile": "~/.ssh/id_ed25519-cert.pub",
      "mosh": {
        "enabled": true,
        "port_range": "60000:61000",
        "prediction": "adaptive"
      },
      "post_login_command": "zellij attach main || zellij --session main",
      "keep_alive": {
        "enabled": true,
        "interval": 60,
        "max_count": 3
      },
      "terminal": {
        "term": "xterm-256color",
        "colorterm": "truecolor"
      }
    },
    {
      "name": "MacBook Alt IP",
      "description": "Alternative IP connection to MacBook",
      "hostname": "10.0.0.6",
      "port": 2222,
      "username": "$(whoami)",
      "authentication": "certificate",
      "identityFile": "~/.ssh/id_ed25519",
      "certificateFile": "~/.ssh/id_ed25519-cert.pub",
      "mosh": {
        "enabled": true,
        "port_range": "60000:61000",
        "prediction": "adaptive"
      },
      "post_login_command": "zellij attach main || zellij --session main",
      "keep_alive": {
        "enabled": true,
        "interval": 60,
        "max_count": 3
      },
      "terminal": {
        "term": "xterm-256color",
        "colorterm": "truecolor"
      }
    },
    {
      "name": "MacBook Dev Session",
      "description": "Development session with specialized layout",
      "hostname": "10.0.0.5",
      "port": 2222,
      "username": "$(whoami)",
      "authentication": "certificate",
      "identityFile": "~/.ssh/id_ed25519",
      "certificateFile": "~/.ssh/id_ed25519-cert.pub",
      "mosh": {
        "enabled": true,
        "port_range": "60000:61000",
        "prediction": "adaptive"
      },
      "post_login_command": "zellij attach dev || zellij --session dev --layout ~/.config/zellij/layouts/development.kdl",
      "keep_alive": {
        "enabled": true,
        "interval": 60,
        "max_count": 3
      },
      "terminal": {
        "term": "xterm-256color",
        "colorterm": "truecolor"
      }
    },
    {
      "name": "MacBook Monitor",
      "description": "System monitoring session",
      "hostname": "10.0.0.5",
      "port": 2222,
      "username": "$(whoami)",
      "authentication": "certificate",
      "identityFile": "~/.ssh/id_ed25519",
      "certificateFile": "~/.ssh/id_ed25519-cert.pub",
      "mosh": {
        "enabled": true,
        "port_range": "60000:61000",
        "prediction": "adaptive"
      },
      "post_login_command": "zellij attach monitor || zellij --session monitor --layout ~/.config/zellij/layouts/monitor.kdl",
      "keep_alive": {
        "enabled": true,
        "interval": 60,
        "max_count": 3
      },
      "terminal": {
        "term": "xterm-256color",
        "colorterm": "truecolor"
      }
    }
  ],
  "snippets": [
    {
      "name": "List Zellij Sessions",
      "command": "zellij list-sessions"
    },
    {
      "name": "Attach Main Session",
      "command": "zellij attach main || zellij --session main"
    },
    {
      "name": "Kill All Zellij Sessions",
      "command": "zellij kill-all-sessions"
    },
    {
      "name": "New Floating Pane",
      "command": "zellij action new-pane --floating"
    },
    {
      "name": "Toggle Fullscreen",
      "command": "zellij action toggle-fullscreen"
    },
    {
      "name": "Health Check",
      "command": "~/.local/bin/remote_health_check"
    },
    {
      "name": "System Status",
      "command": "top -l 1 | head -20"
    },
    {
      "name": "Network Info",
      "command": "ifconfig | grep -E 'inet |status'"
    }
  ]
}